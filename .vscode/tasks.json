{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "./vendor/bin/phpunit",
            "problemMatcher": []
        },
        {
            "label": "Tests (coverage-html)",
            "type": "shell",
            "command": "./vendor/bin/phpunit --coverage-html tests/coverage",
            "problemMatcher": []
        },
        {
            "label": "Run PHP CS Fixer",
            "type": "shell",
            "command": "./vendor/bin/php-cs-fixer fix -v",
            "problemMatcher": []
        },
        {
            "label": "Run PHPStan",
            "type": "shell",
            "command": "./vendor/bin/phpstan analyse src",
            "problemMatcher": []
        },
        {
            "label": "Run PHP Insights",
            "type": "shell",
            "command": "./vendor/bin/phpinsights --no-interaction --disable-security-check -v",
            "problemMatcher": []
        }
    ]
}
